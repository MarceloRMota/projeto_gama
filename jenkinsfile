pipeline {
    agent any

    stages {
        stage('Clone scripts deploy') {
            steps {
                git url:'https://github.com/MarceloRMota/projeto_gama.git', branch: 'main'
            }
        }
        stage('Deploy EC2/IAM/K8S') {
            steps {
                sh "~/workspace/PipeMota/deploy.sh"
            }
        }
        stage('Teste K8S') {
            steps {
                sh "~/workspace/PipeMota/deploy_nginx.sh"
            }
        }
      }
   }
    
