pipeline {
    agent any


    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git url: 'https://github.com/MarceloRMota/projeto_gama.git', branch: 'spring'
                sh '~/workspace/deploy_desenv/build.sh'
            }
        }
        stage('TDD') {
            steps {
                sh '~/workspace/deploy_desenv/test_build.sh'
            }
        }

        stage('Docker image/push') {
            steps {
                sh "~/workspace/deploy_desenv/build/docker_deploy.sh"
            }
        }
        stage('K8s-DEV') {
            steps {
                sh '~/workspace/deploy_desenv/dev/deploy_dev.sh'
            }
        }
        stage('K8s-STAGE') {
            steps {
                sh '~/workspace/deploy_desenv/stage/deploy_stage.sh'
            }
        }
        stage('K8s-PROD') {
            steps {
                sh '~/workspace/deploy_desenv/prd/deploy_prd.sh'
            }
        }
    }
}